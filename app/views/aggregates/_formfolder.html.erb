<%= form_for :folder, :url => url_for(:action=>'create_folder', :controller=>'aggregates') do |f| %>
    <div class="field">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-10">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>
    
    </div>

  <div class="actions">
    <%= f.submit%>
  </div>
<% end %>

